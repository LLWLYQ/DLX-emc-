
/* uft-8 */
html,body,ul,li,ol,dl,dd,dt,p,h1,h2,h3,h4,h5,h6,form,fieldset,legend,img {
    margin: 0;
    padding: 0
}
body, html{
    font: 14px/1.5 "Microsoft YaHei", Arial
    transition: all .3s linear
}
fieldset,img {
    border: 0
}
img {
    display: block
}
address,caption,cite,code,dfn,th,var {
    font-style: normal;
    font-weight: normal
}
ul,ol {
    list-style: none
}
input {
    padding-top: 0;
    padding-bottom: 0;
}
input::-moz-focus-inner {
    border: 0;
    padding: 0
}
select,input {
    vertical-align: middle
}
select,input,textarea {
    font-size: 12px;
    margin: 0
}
input[type="text"],input[type="password"],textarea {
    outline-style: none;
    -webkit-appearance: none
}
textarea {
    resize: none
}
table {
    border-collapse: collapse
}
a {
    color: #333;
    text-decoration: none;
}


.clear{
    clear: both;
}
.clear::after{
    content: "";
    display: table;
}

.baseW-1100 {
    width: 1100px;
    margin: auto;
}

.MgT30 {
  margin-top: 30px;
}

// flex布局
.flexBox {
  display: flex
  align-items: center
  justify-content: flex-start
}
.flexBox.between {
  justify-content space-between
}
.flexBox.center {
  justify-content center
}

// 公共头
.base-tit
  display: flex
  justify-content flex-start
  align-items: flex-start
  width 100%
  height 45px
  box-sizing: border-box
  border-bottom: 1px solid #4fbe5f
  h1
    display: inline-block
    font-size: 1.375rem /* 22/16 */
    line-height: 22px
    color: #4fbe5f
    padding-right: 15px
    border-right: 2px solid #4fbe5f
  span
    float left
    font-size: .875rem /* 14/16 */
    color: #4fbe5f
    margin-left: 15px
    padding-top: 5px
  a
    font-size: 14px
    flex: 1
    color: #4fbe5f
    text-align: right

.slideTop-enter-active, .slideTop-leave-active
  transition: all .5s
.slideTop-enter, .slideTop-leave-to
  transform: translate3d(0, 100%, 0)

.loginMain {
  position: absolute
  top 20px
  margin auto 15px
  max-height: 600px
  background: #fff
  border-radius: 10px
  .title {
    height 55px
    line-height 55px
    padding: 0 15px
    border-bottom: 1px solid #ccc
    h1 {
      font-size: 1.125rem
      color: #4fbe5f
    }
    span {
      display: block
      width: 15px
      height: 15px
      background url('http://lib.albers.top/images/icon/close.png') center center no-repeat
      background-size cover
    }
  }
}
